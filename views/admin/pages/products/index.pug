extend ../../layouts/default.pug

block main
    h1 Danh sách sản phẩm 

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm
        .card-body
            each btn in filterStatus
                button(class=`btn btn-sm ms-1 btn-outline-success ${btn.class}` button-status=btn.status) #{btn.name}
           
    .card.mb-3 
        .card-header Danh sách
        .card-body
            table.table.table-hover.table-sm
                thead
                    tr 
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề
                        th Giá
                        th Trạng thái 
                        th Hành động 

                tbody 
                    each product, index in products
                        tr 
                            td #{index + 1}
                            td
                                img(src= product.thumbnail alt= product.title, width='100px',height='auto')
                            td #{product.title}
                            td #{product.price}$
                            td 
                                if (product.status == "active") 
                                    
                                    a(href='#' class='badge bg-success') Hoạt động
                                else 
                                    a(href='#' class='badge bg-danger' ) Dừng hoạt động
                            

                            td 
                                button(class='btn btn-warning btn-sm') Sửa
                                button(class='btn btn-danger btn-sm ms-1') Xóa
                    
                    
                    

